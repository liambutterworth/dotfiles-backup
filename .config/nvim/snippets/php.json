{
    "?": {
        "prefix": "php",
        "description": "Open php file",

        "body": [
            "<?php",
            "",
            "$0"
        ]
    },

    "d": {
        "prefix": "dump",
        "description": "Dump",

        "body": [
            "dump(${0:$TM_SELECTED_TEXT});"
        ]
    },

    "dd": {
        "prefix": "dd",
        "description": "Die and dump",

        "body": [
            "dd(${0:$TM_SELECTED_TEXT});"
        ]
    },

    "class": {
        "prefix": "class",
        "description": "Class",

        "body": [
            "class ${1:Name}${2: extends ${3:Parent}}",
            "{",
            "\t$0",
            "}"
        ]
    },

    "public method": {
        "prefix": "pub",
        "description": "Public method",

        "body": [
            "public function ${1:name}($2)",
            "{",
            "\t$TM_SELECTED_TEXT$3",
            "}$0"
        ]
    },

    "pubs": {
        "prefix": "pubs",
        "description": "Public static method",

        "body": [
            "public static function ${1:name}($2)",
            "{",
            "\t$TM_SELECTED_TEXT$3",
            "}$0"
        ]
    },

    "pri": {
        "prefix": "pri",
        "description": "Private method",

        "body": [
            "private function ${1:name}($2)",
            "{",
            "\t$TM_SELECTED_TEXT$3",
            "}$0"
        ]
    },

    "pris": {
        "prefix": "pris",
        "description": "Private static method",

        "body": [
            "private static function ${1:name}($2)",
            "{",
            "\t$TM_SELECTED_TEXT$3",
            "}$0"
        ]
    },

    "function": {
        "prefix": ["fun", "function"],
        "description": "Function",

        "body": [
            "function ${1:name}($2) {",
            "\t$TM_SELECTED_TEXT$3",
            "}"
        ]
    },

    "closure": {
        "prefix": ["cl", "closure"],
        "description": "Closure",

        "body": [
            "function($1) {",
            "\t$TM_SELECTED_TEXT$2",
            "}"
        ]
    },

    "for": {
        "prefix": "for",
        "description": "For loop",

        "body": [
            "for (\\$index = ${1:1}; \\$index ${2:<= 10}; ${3:\\$index++}) {",
            "\t$TM_SELECTED_TEXT$4",
            "}$0"
        ]
    },

    "fore": {
        "prefix": "each",
        "description": "Foreach loop",

        "body": [
            "foreach (${1:items} as ${2:item}) {",
            "\t$TM_SELECTED_TEXT$3",
            "}$0"
        ]
    },

    "if": {
        "prefix": "if",
        "description": "Conditional statement",

        "body": [
            "if ($1) {",
            "\t$TM_SELECTED_TEXT$1",
            "}$0"
        ]
    },

    "switch": {
        "prefix": ["sw", "switch"],
        "description": "Switch statement",

        "body": [
            "switch (${1:$TM_SELECTED_TEXT) {",
            "\t$2",
            "}$0"
        ]
    },

    "case": {
        "prefix": "case",
        "description": "Case statement",

        "body": [
            "case $1:",
            "\t${2:$TM_SELECTED_TEXT}",
            "\tbreak;$0"
        ]
    },

    "default": {
        "prefix": ["de", "default"],
        "description": "Default case statement",

        "body": [
            "default $1:",
            "\t${0:$TM_SELECTED_TEXT}"
        ]
    }
}
